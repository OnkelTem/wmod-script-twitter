{
  "compilerOptions": {
    "lib": ["es2017", "dom", "dom.iterable"],
    "module": "commonjs",
    "target": "es2021",
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
